<Window x:Class="ES.InventoryRegister.XAML.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" Height="244" Width="316">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock x:Name="textBlockMessae"
                   TextWrapping="Wrap"
                   FontSize="13"
                   Text="Error message here"/>

        <Grid x:Name="gridExceptionHolder"
              Grid.Row="2"/>

        <Button x:Name="buttonExpandExcpetion"
                Grid.Row="3">Show details</Button>
        
        <Button x:Name="buttonClose"
                Grid.Row="5">
            Close
        </Button>

    </Grid>
</Window>
