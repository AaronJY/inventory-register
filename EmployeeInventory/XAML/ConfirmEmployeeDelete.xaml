<Window x:Class="ES.InventoryRegister.XAML.ConfirmEmployeeDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Employee Delete" Height="143" Width="305" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5,5,5,5">
            <TextBlock x:Name="textBlockMessage"
                       Width="Auto"
                       Height="Auto"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="14">Are you sure you wish to remove<LineBreak/>'{0}'<LineBreak/>an employee?</TextBlock>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="buttonYes" Height="25" Width="135">Yes</Button>
                <Button x:Name="buttonNo" Height="25" Width="135" Margin="5,0,0,0">No</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
