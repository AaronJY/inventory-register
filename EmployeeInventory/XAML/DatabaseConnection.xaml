<Window x:Class="ES.InventoryRegister.XAML.DatabaseConnection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="Establishing connection..." Height="139" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock
            TextWrapping="Wrap"
            FontSize="14"
            TextAlignment="Center"
            Height="Auto">Attempting to establish a connection to the database. This may take a while if this is your first connection.</TextBlock>
        
        <TextBlock Grid.Row="3" TextAlignment="Center">Connecting...</TextBlock>
    </Grid>
</Window>
