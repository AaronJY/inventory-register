<Window x:Class="ES.InventoryRegister.XAML.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Box" Height="118" Width="378.667" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="textBlockLabel" VerticalAlignment="Center">Label: </TextBlock>
        <TextBox x:Name="textBoxValue" VerticalContentAlignment="Center"
                 Grid.Column="2"></TextBox>
        
        <Button x:Name="buttonOK" Grid.Row="2" Grid.ColumnSpan="3">OK</Button>
        
    </Grid>
</Window>
