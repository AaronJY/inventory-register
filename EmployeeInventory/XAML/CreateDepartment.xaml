<Window x:Class="ES.InventoryRegister.XAML.CreateDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Department" Height="114" Width="250" SizeToContent="Height" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0"
                   VerticalAlignment="Center">Name:</TextBlock>
        <TextBox x:Name="textBoxDepartment"
                 Grid.Column="2"></TextBox>
        
        <Button x:Name="buttonCreate"
                Grid.ColumnSpan="3" Grid.Row="2">Create</Button>
    </Grid>
</Window>
