<Window x:Class="ES.InventoryRegister.XAML.CreateDevicePhone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateDevicePhone" Height="98" Width="200" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock VerticalAlignment="Center">Has Camera: </TextBlock>
        <CheckBox x:Name="checkBoxCamera" VerticalAlignment="Center" Grid.Column="2">Camera</CheckBox>
        
        <Button x:Name="buttonNext" Grid.Row="2" Grid.ColumnSpan="3">Next...</Button>
    </Grid>
</Window>
