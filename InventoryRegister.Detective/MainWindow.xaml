<Window x:Class="InventoryRegister.Detective.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detective" Height="344.068" Width="525" ResizeMode="NoResize">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        
        <ProgressBar x:Name="progressBar"></ProgressBar>
        
        <ScrollViewer Grid.Row="2">
            <TextBlock x:Name="textBlockDetails"
                   Grid.Row="2"/>
        </ScrollViewer>
        
        <Button x:Name="buttonSave"
                Grid.Row="4"
                IsEnabled="False">Save</Button>
    </Grid>
</Window>
